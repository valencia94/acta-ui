{
  "name": "acta-ui-dev",

  // Base image: Node 20 + TypeScript
  "image": "mcr.microsoft.com/devcontainers/typescript-node:20-bullseye",

  // Auto-installs AWS CLI v2 every time a Codespace is created
  "features": {
    "ghcr.io/devcontainers-contrib/features/aws-cli:2": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode-remote.remote-containers",
        "ms-azuretools.vscode-docker",
        "Zim.vsc-docker"
      ]
    }
  }
}
