    --response-parameters "method.response.header.Access-Control-Allow-Origin='${ORIGIN}',method.response.header.Access-Control-Allow-Methods='GET,POST,OPTIONS,HEAD',method.response.header.Access-Control-Allow-Headers='Content-Type,Authorization,X-Amz-Date,X-Api-Key,X-Amz-Security-Token',method.response.header.Access-Control-Allow-Credentials='true'" \
    --response-templates '{"application/json":""}' \
